
{
  "manifest_version": 2,
  "name": "Yzhan Learning Time Extension",
  "version": "0.1.0",
  "description": "Count how long you have been learning from the browser",
  "icons": {
    "84": "./icon/icon.png"
  },
  "browser_action": {
    "default_icon": "./icon/icon.png",
    "default_title": "Y站学习时间插件",
    "default_popup": "./html/popup.html"
  },
  "background": {
    "page": "./html/background.html",
    "scripts": ["./js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["./js/document_start.js"],
      "css": ["./css/document_start.css"]
    },
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["./js/document_end.js"],
      "css": ["./css/document_end.css"]
    }
  ]
}
